{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
  "lib": ["DOM", "ESNext"],
  "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/src/*"]
    }
  },
  "include": ["src/**/*", "electron.vite.config.ts", "vite.config.ts"],
  "references": [
    { "path": "tsconfig.node.json" },
    { "path": "tsconfig.web.json" }
  ]
}
